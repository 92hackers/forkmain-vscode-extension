{
	"name": "nocalhost-vscode-plugin",
	"displayName": "nocalhost-vscode-plugin",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:showLogin",
		"onCommand:getApplicationList",
		"onCommand:deployApp",
		"onCommand:useApplication",
		"onView:Nocalhost"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "images/coding-logo.png",
					"id": "NocalhostView",
					"title": "Nocalhost"
				}
			]
		},
		"views": {
			"NocalhostView": [
				{
					"id": "Nocalhost",
					"name": "Nocalhost"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "refreshApplication",
					"when": "view == Nocalhost",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "deployApp",
					"when": "viewItem =~ /^application-notDeployed/i",
					"group": "inline"
				},
				{
					"command": "startDebug",
					"when": "viewItem =~ /^workload-(deployment|statefulSet|daemonSet|job|cronJob)/i",
					"group": "0"
				},
				{
					"command": "endDebug",
					"when": "viewItem =~ /^workload-(deployment|statefulSet|daemonSet|job|cronJob)/i",
					"group": "1"
				},
				{
					"command": "useApplication",
					"when": "viewItem =~ /^application/i",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"command": "showWelcomePage",
				"title": "welcome"
			},
			{
				"command": "showLogin",
				"title": "showLogin"
			},
			{
				"command": "getApplicationList",
				"title": "getApplicationList"
			},
			{
				"command": "refreshApplication",
				"title": "refresh",
				"icon": "images/refresh.svg"
			},
			{
				"command": "deployApp",
				"title": "deployApp",
				"icon": "images/refresh.svg"
			},
			{
				"command": "useApplication",
				"title": "Use Application"
			},
			{
				"command": "getWordloadList",
				"title": "getWordloadList"
			},
			{
				"command": "startDebug",
				"title": "start debug",
				"category": "debug"
			},
			{
				"command": "endDebug",
				"title": "end debug",
				"category": "debug"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/shelljs": "^0.8.8",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"axios": "^0.21.0",
		"shelljs": "^0.8.4"
	}
}
