{
  "name": "nocalhost",
  "displayName": "nocalhost-vscode-plugin",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:Nocalhost",
    "onCommand:Nocalhost.signout",
    "onCommand:Nocalhost.switchEndPoint"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "images/coding-logo.png",
          "id": "NocalhostView",
          "title": "Nocalhost"
        }
      ]
    },
    "views": {
      "NocalhostView": [
        {
          "id": "Nocalhost",
          "name": "Nocalhost"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "Nocalhost",
        "contents": "%noLogin.description%",
        "when": "!login"
      },
      {
        "view": "Nocalhost",
        "contents": "%noApps.description%",
        "when": "login"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "refreshApplication",
          "when": "view == Nocalhost",
          "group": "navigation"
        },
        {
          "command": "Nocalhost.signout",
          "when": "view == Nocalhost",
          "group": "overflow"
        },
        {
          "command": "Nocalhost.switchEndPoint",
          "when": "view == Nocalhost",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "Nocahost.installApp",
          "when": "viewItem =~ /^application-notInstalled/i",
          "group": "inline"
        },
        {
          "command": "Nocahost.uninstallApp",
          "when": "viewItem =~ /^application-installed/i",
          "group": "inline"
        },
        {
          "command": "Nocalhost.startDevMode",
          "when": "viewItem =~ /^workload-(deployment)/i",
          "group": "0"
        },
        {
          "command": "Nocalhost.endDevMode",
          "when": "viewItem =~ /^workload-(deployment)/i",
          "group": "0"
        },
        {
          "command": "Nocalhost.exec",
          "when": "viewItem =~ /^workload-(deployment|statefulSet|daemonSet)/i",
          "group": "1"
        },
        {
          "command": "Nocalhost.log",
          "when": "viewItem =~ /^workload-(deployment|statefulSet|daemonSet|job|cronJob)/i",
          "group": "1"
        },
        {
          "command": "Nocalhost.portForward",
          "when": "viewItem =~ /^workload-(deployment|statefulSet|daemonSet|job|cronJob)/i",
          "group": "1"
        },
        {
          "command": "Nocalhost.loadResource",
          "title": "%loadResource%",
          "when": "viewItem =~ /^application-installed/i"
        }
      ]
    },
    "commands": [
      {
        "command": "showDashboard",
        "title": "Show Dashboard"
      },
      {
        "command": "Nocalhost.switchEndPoint",
        "title": "Switch Endpoint",
        "icon": "$(globe)"
      },
      {
        "command": "Nocalhost.signin",
        "title": "Sign in",
        "icon": "$(sign-in)"
      },
      {
        "command": "getApplicationList",
        "title": "getApplicationList"
      },
      {
        "command": "refreshApplication",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "Nocalhost.signout",
        "title": "Sign out",
        "icon": "$(sign-out)"
      },
      {
        "command": "Nocahost.installApp",
        "title": "Install App",
        "icon": "$(rocket)"
      },
      {
        "command": "Nocahost.uninstallApp",
        "title": "Uninstall App",
        "icon": "$(chrome-close)"
      },
      {
        "command": "useApplication",
        "title": "Use Application"
      },
      {
        "command": "getWordloadList",
        "title": "getWordloadList"
      },
      {
        "command": "Nocalhost.startDevMode",
        "title": "%Start.Develop%",
        "category": "devSpace"
      },
      {
        "command": "Nocalhost.endDevMode",
        "title": "%End.Develop%",
        "category": "devSpace"
      },
      {
        "command": "Nocalhost.exec",
        "title": "%Terminal%"
      },
      {
        "command": "Nocalhost.loadResource",
        "title": "%loadResource%",
        "when": "viewItem =~ /^application-installed/i"
      },
      {
        "command": "Nocalhost.log",
        "title": "%Logs%"
      },
      {
        "command": "Nocalhost.portForward",
        "title": "%PortForward%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/webpack.config.js",
    "package": "webpack --mode production --config ./build/webpack.config.js",
    "lint": "eslint src --ext ts",
    "prettier": "prettier --write \"./**/*@(.js|.jsx|.ts|.tsx|.json)\"",
    "prettier:watch": "onchange \"./**/*@(.js|.jsx|.ts|.tsx|.json)\" -- prettier --write --ignore-unknown {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint"
    }
  },
  "devDependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-router-dom": "^5.1.6",
    "@types/shelljs": "^0.8.8",
    "@types/uuid": "^8.3.0",
    "@types/vscode": "^1.31.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^3.8.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "onchange": "^7.1.0",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "sirv-cli": "^1.0.8",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "shelljs": "^0.8.4",
    "uuid": "^8.3.1",
    "vscode-nls": "^5.0.0",
    "yaml": "^1.10.0"
  },
  "publisher": "nocalhost"
}
